---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation';
import OurDoctors from '../components/OurDoctors';
import Footer from '../components/Footer';
---

<Layout title="Our Doctors - Dentiva Dental Care">
  <Navigation client:load />
  
  <main>
    {/* Hero Section with Red Background */}
    <section className="relative pt-40 pb-32 bg-gradient-to-b from-red-700 to-red-800 overflow-hidden">
      {/* Background Image with Opacity */}
      <div className="absolute inset-0 opacity-20">
        <img
          src="/images/a child.png"
          alt="Background"
          className="w-full h-full object-cover object-center"
        />
      </div>
      
      {/* Content */}
      <div className="max-w-7xl mx-auto px-4 relative z-10 text-center">
        <h1 className="text-5xl md:text-6xl font-bold text-white mb-4">
          Our Doctors
        </h1>
        <p className="text-white/80 text-lg max-w-2xl mx-auto">
          Meet our team of highly skilled and experienced dental professionals dedicated to your oral health
        </p>
      </div>
    </section>

    {/* Doctors Component */}
    <OurDoctors client:load />
  </main>

  <Footer client:load />
</Layout>
